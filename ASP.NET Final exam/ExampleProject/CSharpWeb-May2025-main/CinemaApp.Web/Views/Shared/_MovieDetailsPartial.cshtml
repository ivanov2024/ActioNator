@using CinemaApp.Web.ViewModels.Movie
@model MovieDetailsViewModel

@{
    Layout = null;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded shadow"
                 alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h3 class="fw-bold">@Model.Title</h3>
            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Release Date:</strong> @Model.ReleaseDate</p>
            <p><strong>Director:</strong> @Model.Director</p>
            <p><strong>Duration:</strong> @Model.Duration min</p>
            <p class="mt-3">@Model.Description</p>
        </div>
    </div>
</div>