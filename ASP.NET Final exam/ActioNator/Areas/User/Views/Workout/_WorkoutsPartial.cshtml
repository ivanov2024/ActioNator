@using ActioNator.ViewModels.Workouts
@model WorkoutsListViewModel

<!-- Pagination Controls -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-6 flex items-center justify-center space-x-2 select-none" aria-label="Pagination">
        <button type="button"
                class="px-3 py-1 rounded border text-sm disabled:opacity-50"
                @@click="prevPage()" @(Model.Page <= 1 ? "disabled" : null)>
            Prev
        </button>

        @for (int p = 1; p <= Model.TotalPages; p++)
        {
            <button type="button"
                    class="px-3 py-1 rounded border text-sm @(p == Model.Page ? "bg-indigo-600 text-white border-indigo-600" : "bg-white text-gray-700")"
                    @@click="goToPage(@p)">
                @p
            </button>
        }

        <button type="button"
                class="px-3 py-1 rounded border text-sm disabled:opacity-50"
                @@click="nextPage()" @(Model.Page >= Model.TotalPages ? "disabled" : null)>
            Next
        </button>
    </nav>
}

<div id="paginationContainer"
     data-current-page="@Model.Page"
     data-total-pages="@Model.TotalPages"
     data-page-size="@Model.PageSize"
     class="hidden">
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
    @foreach (var workout in Model.Workouts)
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 workout-card" data-workout-id="@workout.Id">
            <div class="p-6">
                <div class="flex justify-between items-start mb-4 min-w-0">
                    <h3 class="text-xl font-semibold text-gray-800 flex-1 min-w-0 truncate">@workout.Title</h3>
                    <div class="flex space-x-2 flex-shrink-0">
                        <a asp-action="Edit" asp-route-id="@workout.Id" class="text-blue-500 hover:text-blue-700">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button type="button" 
                                @@click="showDeleteConfirmation('@workout.Id')" 
                                class="text-red-500 hover:text-red-700">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>

                <div class="flex items-center text-gray-600 mb-2">
                    <i class="fa-solid fa-calendar mr-2"></i>
                    <span>@workout.DateDisplay</span>
                </div>

                @if (!string.IsNullOrEmpty(workout.CompletedDateDisplay))
                {
                    <div class="flex items-center text-green-600 mb-2">
                        <i class="far fa-calendar-check mr-2"></i>
                        <span>Completed: @workout.CompletedDateDisplay</span>
                    </div>
                }
                else
                {
                    <div class="flex items-center text-red-600 mb-2">
                        <i class="far fa-calendar-times  mr-2"></i>
                        <span>Not completed</span>
                    </div>
                }
                
                <div class="flex items-center text-gray-600 mb-2">
                    <p class="text-sm">Duration: @workout.DurationDisplay</p>
                </div>
                
                @if (!string.IsNullOrWhiteSpace(workout.Notes))
                {
                    <div class="mt-4 text-gray-600 min-w-0">
                        <p class="text-sm truncate">Notes: @workout.Notes</p>
                    </div>
                }
                else {
                    <div class="mt-4 text-gray-600 min-w-0">
                        <p class="text-sm">Notes: None</p>
                    </div>
                }

                <div class="mt-6">
                    <a asp-action="Edit" asp-route-id="@workout.Id" 
                       class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <i class="fas fa-dumbbell mr-2"></i>
                        View Exercises
                    </a>
                </div>
            </div>
        </div>
    }

</div>

@if (Model.Workouts is null || !Model.Workouts.Any())
{
    <div class="text-center py-12">
        <div class="text-gray-500 mb-4">
            <i class="fas fa-dumbbell text-5xl"></i>
        </div>
        <h3 class="text-xl font-medium text-gray-900">No workouts yet</h3>
        <p class="mt-2 text-gray-500">Create your first workout to get started!</p>
    </div>
}
