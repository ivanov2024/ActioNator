@using ActioNator.ViewModels.Workouts
@model WorkoutCardViewModel
@{
    ViewData["Title"] = "Edit Workout | ActioNator";
}

<div x-data="editWorkoutPage()" x-init="init()">
    <!-- Include Toast Notification Partial -->
    <partial name="_ToastPartial" />
    
    <!-- Include Modal Partial -->
    <partial name="_ModalPartial" />
    

    
    <!-- Main Container -->
    <form asp-action="Edit" asp-controller="Workout" asp-route-id="@Model.Id" method="post" id="editWorkoutForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="container mx-auto px-4 py-8 max-w-4xl">
            <div class="flex flex-col sm:flex-row items-center justify-between mb-8">
                <div class="flex items-center mb-4 sm:mb-0">
                    <a href="@Url.Action("Index", "Workout")" 
                       class="mr-4 p-2 rounded-full hover:bg-gray-100 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                    </a>
                    <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">
                        Edit Workout
                    </h1>
                </div>
                <!-- Save button -->
                <div class="sm:block sm:w-[140px]">
                    <button type="submit" id="saveWorkoutBtn" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-4 py-2 rounded-lg shadow-md transition-colors duration-200 w-full">
                        <span id="saveWorkoutBtnText">Save Changes</span>
                        <span id="saveWorkoutBtnLoading" class="hidden">
                            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Saving...
                        </span>
                    </button>
                </div>
            </div>

            <!-- Workout Title -->
            <div class="mb-8">
                <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1">Workout Name</label>
                <input asp-for="Title" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" 
                       placeholder="Enter workout name" />
                <span asp-validation-for="Title" class="text-red-500 text-sm mt-1"></span>
            </div>
        </div>
    </form>

    <!-- Exercises List -->
    <div class="bg-gray-50 p-6 rounded-xl shadow-md border border-gray-200 mb-8 mt-8">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-bold text-gray-800 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                    </svg>
                    Exercises
                </h2>
            </div>

            <template x-if="workout && workout.exercises && workout.exercises.length > 0">
                <ul class="space-y-5">
                    <template x-for="(exercise, idx) in workout.exercises" :key="exercise.id || idx">
                        <li class="bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-300 p-5 flex flex-col sm:flex-row sm:items-center sm:justify-between border border-gray-100 first:mt-4 relative overflow-hidden">
                            <div class="flex-grow">
                                <div class="font-semibold text-lg text-gray-800 mb-1"
                                     x-text="exercise.name"></div>
                                <div class="text-sm text-gray-600 flex flex-wrap gap-x-3 gap-y-1">
                                    <span class="inline-flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                                        </svg>
                                        <span x-text="exercise.sets + ' sets'"></span>
                                    </span>
                                    <span class="inline-flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                                        </svg>
                                        <span x-text="exercise.reps + ' reps'"></span>
                                    </span>
                                    <span class="inline-flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                                        </svg>
                                        <span x-text="exercise.weight + ' kg'"></span>
                                    </span>
                                    <span class="inline-flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                                        </svg>
                                        <span x-text="exercise.duration + ' min'"></span>
                                    </span>
                                </div>
                                <template x-if="exercise.notes">
                                    <div class="text-xs sm:text-sm md:text-base text-gray-500 mt-2 bg-gray-50 p-2 rounded-md border border-gray-100 italic"
                                         x-text="'Notes: ' + exercise.notes"></div>
                                </template>
                            </div>
                            <div class="flex space-x-2 mt-4 sm:mt-0">
                                <button type="button" @@click="editExercise(idx)"
                                        class="edit-exercise-btn px-3 py-1.5 rounded-lg bg-indigo-100 text-indigo-700 hover:bg-indigo-200 font-medium text-sm transition-colors flex items-center focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                    </svg>
                                    Edit
                                </button>
                                <button type="button" @@click.prevent="deleteExercise(idx)" :data-index="idx"
                                    class="delete-exercise-btn px-3 py-1.5 rounded-lg bg-red-100 text-red-700 hover:bg-red-200 font-medium text-sm transition-colors flex items-center focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                    </svg>
                                    Delete
                                </button>
                            </div>
                            <!-- Exercise indicator stripe -->
                            <div class="absolute left-0 top-0 bottom-0 w-1 bg-indigo-500"></div>
                        </li>
                    </template>
                </ul>
            </template>
            <template x-if="workout && workout.exercises && workout.exercises.length === 0">
                <div class="flex flex-col items-center justify-center h-64 text-center text-gray-500 mb-8 bg-white rounded-xl shadow-sm border border-gray-100 p-8">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mb-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" />
                    </svg>
                    <h3 class="text-lg font-medium mb-2">No exercises added yet</h3>
                    <p class="mb-4">
                        Start by adding your first exercise using the button below
                    </p>
                </div>
            </template>

        <div class="flex justify-center sm:justify-end mt-6">
            <button type="button" @@click="openAddExerciseModal()"
                    class="flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Add Exercise
            </button>
        </div>
    </div>

    <!-- Custom Add/Edit Exercise Modal (Razor + AJAX) -->
    <div x-show="showExerciseModal" x-transition class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" style="display: none;">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-0 relative" style="max-height:90vh; overflow-y:auto;">
            <button class="absolute top-2 right-2 text-gray-400 hover:text-gray-600 z-10" type="button" @@click="showExerciseModal = false">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
            <div class="p-6 pt-4" style="max-height:80vh; overflow-y:auto;">
                <h2 class="text-xl font-bold mb-4 text-center" x-text="modalFormMode === 'add' ? 'Add Exercise' : 'Edit Exercise'"></h2>
                <form id="addExerciseForm" asp-action="AddExercise" asp-controller="Workout" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="WorkoutId" value="@Model.Id" />
                    <div class="mb-4 text-center">
                        <img id="exerciseImagePreview" src="" style="display:none;max-height:160px;margin:auto;border-radius:0.5rem;box-shadow:0 2px 8px #0001;object-fit:contain;" alt="Preview" />
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium mb-1">Exercise Name</label>
                        <select name="ExerciseTemplateId" id="exerciseSelect" x-model="exerciseModal.exerciseTemplateId" 
                                :class="{'border-red-500 ring-1 ring-red-500': validationErrors.exerciseTemplateId, 'border-gray-300': !validationErrors.exerciseTemplateId}"
                                class="w-full border bg-white text-gray-900 rounded px-2 py-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" required>
                            <option value="">Select an exercise...</option>
                            @foreach (var ex in ViewBag.ExerciseOptions as IEnumerable<dynamic>)
                            {
                                <option value="@ex.Id" data-img="@ex.ImageUrl">@ex.Name</option>
                            }
                        </select>
                        <span class="text-red-500 text-xs mt-1 block" data-valmsg-for="ExerciseTemplateId" x-text="validationErrors.exerciseTemplateId || ''"></span>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm">Sets</label>
                            <input type="number" min="1" name="Sets" x-model="exerciseModal.sets" 
                                   :class="{'border-red-500 ring-1 ring-red-500': validationErrors.sets, 'border-gray-300': !validationErrors.sets}"
                                   class="w-full border rounded px-2 py-1" required />
                            <span class="text-red-500 text-xs mt-1 block" data-valmsg-for="Sets" x-text="validationErrors.sets || ''"></span>
                        </div>
                        <div>
                            <label class="block text-sm">Reps</label>
                            <input type="number" min="1" name="Reps" x-model="exerciseModal.reps" 
                                   :class="{'border-red-500 ring-1 ring-red-500': validationErrors.reps, 'border-gray-300': !validationErrors.reps}"
                                   class="w-full border rounded px-2 py-1" required />
                            <span class="text-red-500 text-xs mt-1 block" data-valmsg-for="Reps" x-text="validationErrors.reps || ''"></span>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-4 mt-3">
                        <div>
                            <label class="block text-sm">Weight (kg)</label>
                            <input type="number" min="0" name="Weight" x-model="exerciseModal.weight" 
                                   :class="{'border-red-500 ring-1 ring-red-500': validationErrors.weight, 'border-gray-300': !validationErrors.weight}"
                                   class="w-full border rounded px-2 py-1" />
                            <span class="text-red-500 text-xs mt-1 block" data-valmsg-for="Weight" x-text="validationErrors.weight || ''"></span>
                        </div>
                        <div>
                            <label class="block text-sm">Duration (min)</label>
                            <input type="number" min="1" name="Duration" x-model="exerciseModal.duration" 
                                   :class="{'border-red-500 ring-1 ring-red-500': validationErrors.duration, 'border-gray-300': !validationErrors.duration}"
                                   class="w-full border rounded px-2 py-1" />
                            <span class="text-red-500 text-xs mt-1 block" data-valmsg-for="Duration" x-text="validationErrors.duration || ''"></span>
                        </div>
                    </div>
                    <div class="mt-3">
                        <label class="block text-sm">Notes</label>
                        <textarea name="Notes" rows="2" x-model="exerciseModal.notes" 
                                  :class="{'border-red-500 ring-1 ring-red-500': validationErrors.notes, 'border-gray-300': !validationErrors.notes}"
                                  class="w-full border rounded px-2 py-1"></textarea>
                        <span class="text-red-500 text-xs mt-1 block" data-valmsg-for="Notes" x-text="validationErrors.notes || ''"></span>
                    </div>
                    <div class="flex justify-end space-x-2 mt-4">
                        <button type="button" class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" @@click="showExerciseModal = false">Cancel</button>
                        <button type="button" @@click="saveExercise()" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700" :disabled="savingExercise">
                            <span x-show="!savingExercise" x-text="modalFormMode === 'add' ? 'Add' : 'Update'">Add</span>
                            <span x-show="savingExercise" class="flex items-center">
                                <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span x-text="modalFormMode === 'add' ? 'Adding...' : 'Updating...'"></span>
                            </span>
                        </button>
                    </div>
                    <div id="addExerciseValidationSummary" class="text-red-500 text-sm mt-2 p-2 rounded-md" 
                         x-show="Object.keys(validationErrors).length > 0" 
                         style="background-color: rgba(254, 226, 226, 0.5);">
                        <div class="font-medium">Please correct the following errors:</div>
                        <ul class="list-disc pl-5 space-y-1 mt-1">
                            <template x-for="(error, field) in validationErrors" :key="field">
                                <li x-text="error"></li>
                            </template>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
    </div>

@await Html.PartialAsync("_ModalPartial")

@section Scripts {
    <!-- Load Alpine.js with defer to ensure other scripts load first -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    
    <!-- Store JSON data in script tags to avoid JavaScript syntax errors -->
    <script>
        try {
            window.workoutModelData = @Html.Raw(Json.Serialize(Model));
        } catch (e) {
            console.error('Error parsing workoutModelData:', e);
            window.workoutModelData = {};
        }
        
        try {
            window.exerciseOptionsData = @Html.Raw(Json.Serialize(ViewBag.ExerciseOptions ?? new[] { new { Name = "Custom Exercise" } }));
        } catch (e) {
            console.error('Error parsing exerciseOptionsData:', e);
            window.exerciseOptionsData = [];
        }
    </script>
    
    <!-- Load our external JS file -->
    <script src="~/js/editWorkoutPage.js"></script>
}
