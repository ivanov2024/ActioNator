@using ActioNator.ViewModels.Journal
@model JournalEntriesListViewModel

@{
    ViewData["Title"] = "Journal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Include shared toast partial *@
@await Html.PartialAsync("_ToastPartial")

@section Styles {
    <link rel="stylesheet" href="~/css/journal.css" />
    <!-- Reuse Goals read-more styles for consistent UX -->
    <link rel="stylesheet" href="~/css/goal-animations.css" />
}

<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Journal</h1>
            <p class="text-gray-600">Record your thoughts, reflections, and experiences.</p>
        </div>
        <div class="mt-4 md:mt-0 flex flex-col sm:flex-row gap-4">
            <div class="relative">
                <input
                    type="text"
                    placeholder="Search entries..."
                    class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    id="journal-search-input"
                    value="@Model?.SearchTerm"
                >
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
            <button
                onclick="window.JournalUI && window.JournalUI.openAddModal && window.JournalUI.openAddModal()"
                class="flex items-center justify-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
            >
                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                New Entry
            </button>
        </div>
    </div>

    <!-- Journal Entries + Pagination Partial -->
    <div id="journal-partial-container">
        @await Html.PartialAsync("_JournalEntriesPartial", Model)
    </div>

    <!-- Add/Edit Entry Modal - Using custom journal-specific modal -->
    <partial name="_AddJournalEntryModal" model="new JournalEntryViewModel()" />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/journal.js" asp-append-version="true"></script>
    <!-- Enable shared Read More / Show Less behavior -->
    <script src="~/js/read-more.js" asp-append-version="true"></script>
    <script src="~/js/journal.page.js" asp-append-version="true"></script>
}
