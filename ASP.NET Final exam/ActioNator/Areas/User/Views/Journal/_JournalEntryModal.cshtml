@* Journal Entry Modal Partial View *@

<div
    x-data="{
        showModal: false,
        isEditMode: false,
        currentEntry: {
            id: '',
            title: '',
            content: '',
            mood: ''
        },
        validationAttempted: false,
        validationErrors: {}
    }"
    class="fixed inset-0 z-50 overflow-y-auto"
    aria-labelledby="modal-title"
    role="dialog"
    aria-modal="true"
    x-show="showModal"
    x-cloak
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    x-init="
        console.log('Journal modal initialized');
        $watch('showModal', value => {
            console.log('Modal visibility changed:', value);
            if (value) document.body.classList.add('overflow-hidden');
            else {
                document.body.classList.remove('overflow-hidden');
                // Reset to add mode when modal is closed
                setTimeout(() => {
                    isEditMode = false;
                    currentEntry = {
                        id: '',
                        title: '',
                        content: '',
                        mood: ''
                    };
                }, 300); // Wait for transition to complete
            }
        });
        document.addEventListener('open-workout-modal', () => {
            console.log('Journal modal: Received open-workout-modal event');
            showModal = true;
        });
        document.addEventListener('open-journal-modal', () => {
            console.log('Journal modal: Received open-journal-modal event');
            showModal = true;
        });
        document.addEventListener('close-journal-modal', () => {
            console.log('Journal modal: Received close-journal-modal event');
            showModal = false;
        });
        document.addEventListener('journal-edit-mode', (e) => {
            console.log('Journal modal: Received journal-edit-mode event', e.detail);
            isEditMode = e.detail.isEditMode;
        });
    "
    @@keydown.escape.window="showModal = false"
>
    <div 
        class="flex items-center justify-center min-h-screen p-4"
        @@click.away="showModal = false"
    >
        <!-- Backdrop -->
        <div
            class="fixed inset-0 bg-gray-500 bg-opacity-75 backdrop-blur-sm modal-backdrop"
        ></div>

        <!-- Modal Content -->
        <div
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 transform scale-95"
            x-transition:enter-end="opacity-100 transform scale-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 transform scale-100"
            x-transition:leave-end="opacity-0 transform scale-95"
            class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full modal-content relative z-20"
            @@click.stop
        >
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6">
                <div class="mb-4">
                    <h3 class="text-lg font-medium leading-6 text-gray-900" x-text="isEditMode ? 'Edit Journal Entry' : 'Add Journal Entry'"></h3>
                    <p class="mt-1 text-sm text-gray-600" x-text="isEditMode ? 'Update your journal entry details below.' : 'Create a new journal entry to record your thoughts.'"></p>
                </div>

                <form id="journalEntryForm" @@submit.prevent="saveEntry">
                    <!-- Title Field -->
                    <div class="mb-4">
                        <label for="entry-title" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                        <input
                            type="text"
                            id="entry-title"
                            x-model="currentEntry.title"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                            :class="{'border-red-500': validationAttempted && (!currentEntry.title || currentEntry.title.length < 3 || currentEntry.title.length > 20)}"
                        >
                        <div 
                            x-show="validationAttempted && (!currentEntry.title || currentEntry.title.length < 3 || currentEntry.title.length > 20)"
                            class="text-red-500 text-sm mt-1"
                        >
                            Title must be between 3 and 20 characters.
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
                        <textarea 
                            name="content" 
                            id="content" 
                            x-model="currentEntry.content"
                            rows="4"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                            :class="{'border-red-500': validationAttempted && currentEntry.content && currentEntry.content.length > 150}"
                        ></textarea>
                        <div class="flex justify-between">
                            <div 
                                x-show="validationAttempted && currentEntry.content && currentEntry.content.length > 150"
                                class="text-red-500 text-sm mt-1"
                            >
                                Content must not exceed 150 characters.
                            </div>
                            <div class="text-gray-500 text-sm mt-1">
                                <span x-text="currentEntry.content ? currentEntry.content.length : 0"></span>/150
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="mood" class="block text-sm font-medium text-gray-700">Mood Tag (optional)</label>
                        <input 
                            type="text" 
                            name="mood" 
                            id="mood" 
                            x-model="currentEntry.mood"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                            :class="{'border-red-500': validationAttempted && currentEntry.mood && currentEntry.mood.length > 50}"
                        >
                        <div 
                            x-show="validationAttempted && currentEntry.mood && currentEntry.mood.length > 50"
                            class="text-red-500 text-sm mt-1"
                        >
                            Mood tag must not exceed 50 characters.
                        </div>
                    </div>
                </form>
            </div>
            
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <button
                    type="button"
                    @@click="validateForm() && saveEntry()"
                    class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm"
                >
                    <span x-show="!isEditMode">Add Entry</span>
                    <span x-show="isEditMode">Update Entry</span>
                </button>
                <button
                    type="button"
                    @@click="showModal = false"
                    class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm"
                >
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>
