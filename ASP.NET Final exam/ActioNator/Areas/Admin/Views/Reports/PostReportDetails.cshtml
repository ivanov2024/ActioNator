@model ActioNator.ViewModels.Admin.PostReportDetailsViewModel

@{
    ViewData["Title"] = "Post Report Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Post Report Details</h1>
        <a asp-action="Index" class="btn btn-secondary">Back to Reports</a>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Report Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Report ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Reported By:</dt>
                        <dd class="col-sm-8">@Model.ReportedByUserName</dd>

                        <dt class="col-sm-4">Report Date:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == "Pending" ? "bg-warning" : 
                                               Model.Status == "Resolved" ? "bg-success" : 
                                               Model.Status == "Rejected" ? "bg-danger" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Reason:</dt>
                        <dd class="col-sm-8">@Model.Reason</dd>

                        <dt class="col-sm-4">Details:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Details) ? "No details provided" : Model.Details)</dd>

                        @if (Model.ReviewedByUserId.HasValue)
                        {
                            <dt class="col-sm-4">Reviewed By:</dt>
                            <dd class="col-sm-8">@Model.ReviewedByUserName</dd>

                            <dt class="col-sm-4">Review Date:</dt>
                            <dd class="col-sm-8">@Model.ReviewedAt?.ToString("g")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Reported Post</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Post ID:</dt>
                <dd class="col-sm-10">@Model.PostId</dd>

                <dt class="col-sm-2">Content:</dt>
                <dd class="col-sm-10">
                    <div class="card">
                        <div class="card-body">
                            @Model.PostContent
                        </div>
                    </div>
                </dd>
            </dl>

            <div class="mt-3">
                <a href="/Community/Post/@Model.PostId" target="_blank" class="btn btn-outline-primary">
                    <i class="bi bi-eye"></i> View Post
                </a>
            </div>
        </div>
    </div>

    @if (Model.Status == "Pending")
    {
        <div class="card mb-4">
            <div class="card-header bg-warning">
                <h5 class="mb-0">Review Report</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdatePostReportStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="statusResolved" value="Resolved" required>
                                <label class="form-check-label" for="statusResolved">
                                    Resolved (Take Action)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="statusRejected" value="Rejected" required>
                                <label class="form-check-label" for="statusRejected">
                                    Rejected (No Action)
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="notes" class="form-label">Review Notes</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Enter your review notes here..."></textarea>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Review Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">Reviewed By:</dt>
                    <dd class="col-sm-10">@Model.ReviewedByUserName</dd>

                    <dt class="col-sm-2">Review Date:</dt>
                    <dd class="col-sm-10">@Model.ReviewedAt?.ToString("g")</dd>

                    <dt class="col-sm-2">Status:</dt>
                    <dd class="col-sm-10">
                        <span class="badge @(Model.Status == "Resolved" ? "bg-success" : "bg-danger")">
                            @Model.Status
                        </span>
                    </dd>

                    <dt class="col-sm-2">Notes:</dt>
                    <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.ReviewNotes) ? "No notes provided" : Model.ReviewNotes)</dd>
                </dl>
            </div>
        </div>
    }
</div>
