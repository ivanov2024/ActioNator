@model ActioNator.ViewModels.Admin.CommentReportDetailsViewModel

@{
    ViewData["Title"] = "Comment Report Details";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="mb-3">Comment Report Details</h1>
            <a asp-action="Index" class="btn btn-secondary mb-3">Back to Reports</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Reported Comment</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Comment Content:</strong>
                        <div class="card">
                            <div class="card-body">
                                @Model.CommentContent
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <strong>Additional Details:</strong>
                        <p>@(string.IsNullOrEmpty(Model.Details) ? "No additional details provided." : Model.Details)</p>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5>Report Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Report ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Reported By:</dt>
                        <dd class="col-sm-9">@Model.ReportedByUserName</dd>

                        <dt class="col-sm-3">Reason:</dt>
                        <dd class="col-sm-9">@Model.Reason</dd>

                        <dt class="col-sm-3">Date Reported:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Status == "Pending" ? "bg-warning" : 
                                                Model.Status == "Resolved" ? "bg-success" : 
                                                Model.Status == "Rejected" ? "bg-danger" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-3">Comment ID:</dt>
                        <dd class="col-sm-9">@Model.CommentId</dd>

                        <dt class="col-sm-3">Post:</dt>
                        <dd class="col-sm-9">
                            <a href="/Community/Post/@Model.PostId" target="_blank">Post #@Model.PostId</a>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.ReviewedByUserName))
                        {
                            <dt class="col-sm-3">Reviewed By:</dt>
                            <dd class="col-sm-9">@Model.ReviewedByUserName</dd>

                            <dt class="col-sm-3">Reviewed On:</dt>
                            <dd class="col-sm-9">@Model.ReviewedAt?.ToString("g")</dd>

                            <dt class="col-sm-3">Review Notes:</dt>
                            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.ReviewNotes) ? "No notes provided." : Model.ReviewNotes)</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Actions</h5>
                </div>
                <div class="card-body">
                    @if (Model.Status == "Pending")
                    {
                        <form asp-action="ResolveCommentReport" method="post" class="mb-3">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="mb-3">
                                <label for="reviewNotes" class="form-label">Review Notes</label>
                                <textarea id="reviewNotes" name="reviewNotes" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" name="action" value="resolve" class="btn btn-success">Mark as Resolved</button>
                                <button type="submit" name="action" value="reject" class="btn btn-danger">Reject Report</button>
                            </div>
                        </form>

                        <form asp-action="DeleteComment" method="post" onsubmit="return confirm('Are you sure you want to delete this comment? This action cannot be undone.');">
                            <input type="hidden" name="id" value="@Model.CommentId" />
                            <input type="hidden" name="reportId" value="@Model.Id" />
                            <div class="d-grid">
                                <button type="submit" class="btn btn-outline-danger">Delete Comment</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            This report has already been @Model.Status.ToLower().
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
