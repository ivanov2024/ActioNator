@model ActioNator.ViewModels.Reports.ReportedCommentViewModel

<div class="card h-100 shadow-sm" id="comment-@Model.CommentId">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <span class="fw-bold text-truncate">@Model.AuthorUserName</span>
        <span class="badge bg-danger">@Model.TotalReports reports</span>
    </div>
    <div class="card-body">
        <h5 class="card-title">Reported Comment</h5>
        <div class="mb-3">
            <small class="text-muted">Reason: @Model.ReportReason</small>
        </div>
        <p class="card-text content-preview">@Model.ContentPreview</p>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <small class="text-muted">Reported by: @Model.ReporterUserName</small>
            <small class="text-muted">@Model.ReportedAt.ToString("MMM dd, yyyy HH:mm")</small>
        </div>
    </div>
    <div class="card-footer bg-transparent">
        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-sm btn-outline-primary" onclick="viewComment('@Model.CommentId')">
                <i class="bi bi-eye me-1"></i> View
            </button>
            <div>
                <button type="button" class="btn btn-sm btn-outline-secondary me-1" onclick="dismissCommentReport('@Model.CommentId')">
                    <i class="bi bi-check me-1"></i> Dismiss
                </button>
                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteComment('@Model.CommentId')">
                    <i class="bi bi-trash me-1"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
