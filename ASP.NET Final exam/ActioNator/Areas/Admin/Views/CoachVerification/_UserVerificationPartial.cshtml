@model ActioNator.ViewModels.CoachVerification.CoachVerificationUserViewModel

<div class="space-y-4">
    <div>
        <h4 class="text-lg font-medium text-gray-900">Documents for User: @Model.UserId</h4>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        @foreach (var document in Model.Documents)
        {
            <div class="h-full">
                <div class="h-full bg-white shadow-sm rounded-lg border border-gray-100">
                    <div class="p-4">
                        @if (document.FileType == "image")
                        {
                            <div class="mb-3">
                                <img src="@Url.Action("ViewDocument", "CoachVerification", new { area = "Admin", userId = Model.UserId, path = document.RelativePath })"
                                     alt="@document.FileName"
                                     class="w-full h-48 object-cover rounded-md ring-1 ring-black/5" />
                            </div>
                        }
                        else if (document.FileType == "pdf")
                        {
                            <div class="mb-3 text-center">
                                <i class="fas fa-file-pdf text-red-500 text-5xl"></i>
                                <p class="mt-2 text-sm text-gray-600">PDF Document</p>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3 text-center">
                                <i class="far fa-file text-gray-400 text-5xl"></i>
                                <p class="mt-2 text-sm text-gray-600">Document</p>
                            </div>
                        }

                        <h5 class="font-medium text-gray-900 truncate" title="@document.FileName">
                            @document.FileName
                        </h5>
                    </div>
                    <div class="px-4 py-3 border-t border-gray-100">
                        <div class="flex items-center justify-between gap-2">
                            <a asp-area="Admin" asp-controller="CoachVerification" asp-action="ViewDocument" asp-route-userId="@Model.UserId" asp-route-path="@document.RelativePath"
                               target="_blank"
                               class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-indigo-700 bg-indigo-50 hover:bg-indigo-100 rounded-md border border-indigo-200">
                                <i class="fas fa-eye mr-2"></i> View
                            </a>
                            <a asp-area="Admin" asp-controller="CoachVerification" asp-action="ViewDocument" asp-route-userId="@Model.UserId" asp-route-path="@document.RelativePath" asp-route-download="true"
                               class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-700 bg-gray-50 hover:bg-gray-100 rounded-md border border-gray-200">
                                <i class="fas fa-download mr-2"></i> Download
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="flex items-center justify-end gap-2 pt-2">
        <form asp-action="RejectVerification" asp-route-userId="@Model.UserId" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md border border-red-200 text-red-700 bg-red-50 hover:bg-red-100">
                <i class="fas fa-times-circle mr-2"></i> Reject
            </button>
        </form>
        <form asp-action="ApproveVerification" asp-route-userId="@Model.UserId" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md border border-green-200 text-green-700 bg-green-50 hover:bg-green-100">
                <i class="fas fa-check-circle mr-2"></i> Approve
            </button>
        </form>
    </div>
</div>
