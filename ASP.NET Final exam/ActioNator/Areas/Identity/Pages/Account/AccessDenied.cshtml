@page
@model ActioNator.Areas.Identity.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Access Denied</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-lock fa-4x text-danger mb-3"></i>
                        <h4>You do not have permission to access this resource.</h4>
                        <p class="text-muted">
                            This might be because:
                        </p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check-circle text-danger me-2"></i> You don't have the required permissions</li>
                            <li><i class="fas fa-check-circle text-danger me-2"></i> You're trying to access a resource that belongs to another user</li>
                            <li><i class="fas fa-check-circle text-danger me-2"></i> You need to log in with a different account</li>
                        </ul>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="@Model.ReturnUrl" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i> Go Back
                        </a>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home me-1"></i> Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
