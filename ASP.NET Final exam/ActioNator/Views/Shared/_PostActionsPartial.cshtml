<!-- Action Buttons -->
<div class="flex border-t border-gray-200 pt-3 px-4 action-buttons-container">
    <button @@click ="toggleLike(); likePost('@Model.Id')" class="flex items-center justify-center flex-1 py-2 hover:bg-gray-50 rounded-md" :class="{ 'text-facebook-blue': liked }" data-action="like" data-post-id="@Model.Id">
        <svg class="h-5 w-5 mr-1" xmlns="http://www.w3.org/2000/svg" :class="liked ? 'text-facebook-blue' : 'text-gray-500'" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
        </svg>
        <span :class="liked ? 'text-facebook-blue font-medium text-sm' : 'text-gray-600 text-sm'" x-text="liked ? 'Liked' : 'Like'" class="hidden sm:inline"></span>
    </button>
    <button @@click ="toggleComments()" class="flex items-center justify-center flex-1 py-2 hover:bg-gray-50 rounded-md" :class="{ 'text-facebook-blue': commentsVisible }">
        <svg class="h-5 w-5 mr-1" xmlns="http://www.w3.org/2000/svg" :class="commentsVisible ? 'text-facebook-blue' : 'text-gray-500'" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
        </svg>
        <span :class="commentsVisible ? 'text-facebook-blue font-medium text-sm' : 'text-gray-600 text-sm'" class="hidden sm:inline">Comment</span>
    </button>
</div>
