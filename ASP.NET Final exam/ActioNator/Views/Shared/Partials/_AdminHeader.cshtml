@* Admin Header Navigation *@
<header class="fixed top-0 left-0 right-0 bg-white shadow-md z-50">
    <div class="container mx-auto px-4 py-3 flex justify-between items-center">
        @* Logo *@
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-indigo-600">
            <p>ActioNator Admin Panel</p>
        </a>

        @* Desktop navigation *@
        <nav class="hidden lg:flex space-x-8" aria-label="Main navigation">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-indigo-600 transition-colors">Dashboard</a>
            <a asp-area="Admin" asp-controller="CoachVerification" asp-action="Index" class="text-gray-700 hover:text-indigo-600 transition-colors">Coach Verification</a>
            <a asp-area="Admin" asp-controller="ReportReview" asp-action="Index" class="text-gray-700 hover:text-indigo-600 transition-colors">Report Review</a>            <a asp-controller="Community" asp-action="Index" class="text-gray-700 hover:text-indigo-600 transition-colors">Community</a>
            <a asp-controller="UserProfile" asp-action="Index" class="text-gray-700 hover:text-indigo-600 transition-colors">Profile</a> 
            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                <input type="hidden" name="returnUrl" value="~/Identity/Account/Access" />
                <button type = "submit" class="w-full px-4 py-2 bg-red-100 text-red-700 rounded-md hover:bg-red-200 transition-colors focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
                    Logout
                </button>
            </form>
        </nav>

        @* Mobile Menu Button *@
        <button id="menu-toggle" class="lg:hidden text-gray-700 focus:outline-none" aria-label="Toggle menu" aria-expanded="false">
            <i class="fas fa-bars text-2xl"></i>
        </button>
    </div>
</header>

@* Mobile drawer *@
<div id="mobile-nav" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
    <div class="bg-white h-full w-64 transform -translate-x-full transition-transform duration-300 ease-in-out">
        <div class="flex justify-between items-center p-4 border-b">
            <span class="text-xl font-bold text-indigo-600">Menu</span>
            <button id="close-menu" class="text-gray-500 hover:text-gray-700 focus:outline-none" aria-label="Close menu">
                <i class="fas fa-times text-2xl"></i>
            </button>
        </div>
        <nav class="flex flex-col h-[calc(100%-4rem)]" aria-label="Mobile navigation">
            <div class="flex-1 py-4">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Dashboard</a>
                <a asp-area="Admin" asp-controller="CoachVerification" asp-action="Index" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Coach Verification</a>
                <a asp-area="Admin" asp-controller="ReportReview" asp-action="Index" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Report Review</a>
                <a asp-controller="Community" asp-action="Index" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Community</a>
                <a asp-controller="UserProfile" asp-action="Index" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Profile</a>
            </div>
            <div class="p-4 border-t">
                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <input type="hidden" name="returnUrl" value="~/Identity/Account/Access" />
                    <button type = "submit" class="w-full px-4 py-2 bg-red-100 text-red-700 rounded-md hover:bg-red-200 transition-colors focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
                        Logout
                    </button>
                </form>
            </div>
        </nav>
    </div>
</div>